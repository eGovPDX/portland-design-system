{
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=${localEnv:HOME}/.local/share/pnpm/,target=/home/node/.local/share/pnpm/,type=bind"
  ],
  "forwardPorts": [3000, 6006, 8080],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/zsh",
        "editor.formatOnSave": true
      }
    }
  },
  "remoteUser": "node",
  "remoteEnv": {
    "PNPM_HOME": "/home/node/.local/share/pnpm",
    "PATH": "/home/node/.local/share/pnpm:${containerEnv:PATH}"
  }
}
