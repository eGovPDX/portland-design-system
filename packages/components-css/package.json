  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "vite": "^7.1.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.3"
