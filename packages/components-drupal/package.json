{
  "name": "@cityofportland/components-drupal",
  "version": "0.0.1",
  "description": "Drupal Single Directory Components as stories",
  "keywords": [
    "SDC",
    "storybook",
    "Drupal",
    "storybook-addons"
  ],
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Mike McDonald",
    "email": "michael.mcdonald@portlandoregon.gov"
  },
  "scripts": {
    "build": "vite build",
    "build:multi": "vite build --config vite-multi-entry.config.js",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch --mode development",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "serve": "npx http-server ./storybook-static",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.mjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts,.mjs --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@cityofportland/components-css": "workspace:*",
    "@eslint/js": "^9.39.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/core-events": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "@storybook/types": "^8.6.14",
    "@tailwindcss/vite": "^4.1.16",
    "@types/json-schema": "^7.0.15",
    "@types/twig": "^1.12.17",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "drupal-attribute": "^1.2.1",
    "drupal-twig-extensions": "1.0.0-beta.5",
    "storybook": "^8.6.14",
    "storybook-addon-sdc": "^0.8.3",
    "tailwindcss": "^4.1.16",
    "twig": "^1.17.1",
    "typescript": "~5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-twig-drupal": "^1.6.2",
    "yaml": "^2.8.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
