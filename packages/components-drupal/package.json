{
  "name": "@cityofportland/components-drupal",
  "version": "0.0.1",
  "description": "Drupal Single Directory Components as stories",
  "keywords": [
    "SDC",
    "storybook",
    "Drupal",
    "storybook-addons"
  ],
  "type": "module",
  "license": "MIT",
  "author": {
    "name": "Mike McDonald",
    "email": "michael.mcdonald@portlandoregon.gov"
  },
  "scripts": {
    "build": "vite build",
    "build:multi": "vite build --config vite-multi-entry.config.js",
    "build:watch": "vite build --watch",
    "dev": "vite build --watch --mode development",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "serve": "npx http-server ./storybook-static",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.mjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts,.mjs --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@cityofportland/components-lit": "workspace:*",
    "@cityofportland/design-tokens": "workspace:*",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/core-events": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "@storybook/types": "^8.6.14",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.18.12",
    "@types/twig": "^1.12.17",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "auto": "^11.3.0",
    "boxen": "^8.0.1",
    "dedent": "^1.7.0",
    "drupal-attribute": "^1.2.1",
    "drupal-twig-extensions": "1.0.0-beta.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^10.4.5",
    "json-schema-faker": "^0.5.9",
    "jsonschema": "^1.5.0",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "storybook": "^8.6.14",
    "storybook-addon-sdc": "^0.8.3",
    "twig": "^1.17.1",
    "typescript": "~5.8.3",
    "vite": "^6.4.1",
    "vite-plugin-twig-drupal": "^1.6.2",
    "zx": "^8.8.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
