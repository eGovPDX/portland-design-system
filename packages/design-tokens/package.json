{
  "name": "@cityofportland/design-tokens",
  "version": "1.1.0",
  "description": "Design tokens managed in Style Dictionary for the Portland Design System.",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./css/*": "./dist/css/*",
    "./js/*": "./dist/js/*",
    "./scss/*": "./dist/scss/*",
    "./tailwind/*": "./dist/tailwind/*",
    "./unocss/*": "./dist/unocss/*"
  },
  "scripts": {
    "build": "style-dictionary build --verbose --config ./src/config.js",
    "clean": "rm -rf dist/",
    "lint": "eslint . --ext .js,.mjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.mjs --fix"
  },
  "keywords": [
    "figma",
    "design-tokens",
    "css"
  ],
  "files": [
    "dist"
  ],
  "author": "City of Portland, Oregon",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "style-dictionary": "^5.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.3"
}
